# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_here

# API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Streamlit
STREAMLIT_PORT=8501
STREAMLIT_HOST=0.0.0.0

# CORS: 허용할 프론트 오리진 (쉼표 구분). 프로덕션에서 실제 도메인 지정
# CORS_ORIGINS=http://localhost:8501,http://127.0.0.1:8501,https://your-app.example.com

# LLM
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.7
# 독립성 검토 (선택)
# INDEPENDENCE_EXTRACTION_MODEL=gpt-4o-mini
# INDEPENDENCE_ANALYSIS_MODEL=gpt-4o

# App
DEBUG=true
LOG_LEVEL=INFO
# 법령 URL 매핑용 CSV 경로. 비우면 프로젝트 루트 법령검색목록.csv 사용
# LAW_CSV_PATH=

# 국가법령정보센터 API 키 (OC=본인ID). API 호출 시 파라미터로 넣어 요청
# 예: https://www.law.go.kr/DRF/lawSearch.do?OC=[사용자ID]&target=law&type=XML
# LAW_GO_KR_OC=your_oc_id_here
